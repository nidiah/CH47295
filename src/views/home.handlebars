<div class="container">
    <h1 class="mt-5 mb-5">Productos</h1>
    <div class="grid text-center">
        {{#each products}}
        <div class="g-col-4 mb-4">
            <div class="card " style="width: 18rem;">
                <img src="{{this.thumbnails}}" class="card-img-top" alt="{{this.title}}-img">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Precio: {{this.price}}</li>
                        <li class="list-group-item">Categoría: {{this.category}}</li>
                        <li class="list-group-item">Código: {{this.code}}</li>
                    </ul>
                    {{!-- <a href="#" class="btn btn-primary">Go somewhere</a> --}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>